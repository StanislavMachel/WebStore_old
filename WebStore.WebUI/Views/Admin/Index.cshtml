@using PagedList
@using PagedList.Mvc
@model IEnumerable<WebStore.Domain.Entities.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>Products</h2>
    </div>

    <style>
        .form-inline .form-control {
            width: auto;
        }
    </style>

       

