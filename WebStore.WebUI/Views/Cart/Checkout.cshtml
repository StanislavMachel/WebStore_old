@model WebStore.Domain.Entities.ShippingDetails

@{
    ViewBag.Title = "WebStore: Checkout";
}

<h2>Check out now</h2>
Please enter your details, and we will ship your good as soon as possible!
@using (Html.BeginForm())
{
    <h3>Ship to</h3>
    <div>Name: @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })</div>
    <h3>Address</h3>
    <div>Line 1: @Html.EditorFor(x => x.Line1, new { htmlAttributes = new { @class = "form-control" } })</div>
    <div>Line 2: @Html.EditorFor(x => x.Line2, new { htmlAttributes = new { @class = "form-control" } })</div>
    <div>Line 3: @Html.EditorFor(x => x.Line3, new { htmlAttributes = new { @class = "form-control" } })</div>
    <div>City: @Html.EditorFor(x => x.City, new { htmlAttributes = new { @class = "form-control" } })</div>
    <div>State: @Html.EditorFor(x => x.State, new { htmlAttributes = new { @class = "form-control" } })</div>
    <div>Zip code: @Html.EditorFor(x => x.Zip, new { htmlAttributes = new { @class = "form-control" } })</div>
    <div>Contry: @Html.EditorFor(x => x.Country, new { htmlAttributes = new { @class = "form-control" } })</div>
    <h3>Options</h3>
    <label>
        @Html.EditorFor(x => x.GiftWrap, new { htmlAttributes = new { @class = "checkbox" } })
        Gift wrap these items
    </label>
    <p>
        <input class="actionButtons" type="submit" value="Complete order" />
    </p>
}