@model IEnumerable<string>

@Html.ActionLink("All products", "Index", "Product", null,
    new  { @class = "btn btn-block btn-default btn-lg"})

@foreach (var link in Model)
{
    @Html.RouteLink(link,
                    new { controller = "Product", action = "Index", category = link, page = 1 },
                    new { @class = "btn btn-block btn-default btn-lg" })
}